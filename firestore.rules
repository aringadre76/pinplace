rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /maps/{mapId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.ownerId;
      
      match /pins/{pinId} {
        allow read: if true;
        allow create: if !get(/databases/$(database)/documents/maps/$(mapId)).data.isLocked;
        allow delete: if request.auth.uid == get(/databases/$(database)/documents/maps/$(mapId)).data.ownerId;
      }
      
      match /shareLinks/{tokenId} {
        allow read: if true;
        allow create: if request.auth.uid == get(/databases/$(database)/documents/maps/$(mapId)).data.ownerId;
        allow delete: if request.auth.uid == get(/databases/$(database)/documents/maps/$(mapId)).data.ownerId;
      }
    }
  }
}
